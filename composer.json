{
    "name": "akburko/gammusmsd",
    "type": "library",
    "description": "Library for Gammu SMSD",
    "keywords": [
        "akburko",
        "gammusmsd"
    ],
    "homepage": "https://github.com/akburko/gammusmsd",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander K. Burko",
            "email": "akburko@yandex.ru",
            "homepage": "http://gammusmsd.burko.name",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "akburko\\gammusmsd\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "akburko\\gammusmsd\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
